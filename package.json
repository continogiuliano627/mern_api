{
  "name": "mern-api",
  "version": "1.0.0",
  "description": "RESTful API Node.js + Express + MongoDB",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "lint": "eslint 'src/**/*.{js,mjs,cjs}'",
    "format": "prettier --write 'src/**/*.{js,mjs,cjs,json,md}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "restapi",
    "mern"
  ],
  "author": "Giuliano",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mongoose": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0"
  }
}
